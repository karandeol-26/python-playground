"""
Number Guessing Game

A simple console-based game where the player tries to guess a randomly chosen number between 1 and 100.

"""

import random

print("Welcome to the number guessing game!")
num = random.randint(1, 100)
level = input("Choose a difficulty. Type 'easy' or 'hard': ").strip().lower()

lives = 10 if level == 'easy' else 5

while lives > 0:
    print(f"You have {lives} attempts remaining to guess the number.")
    try:
        guess = int(input("Make a guess: "))
    except ValueError:
        print("Please enter a valid number.")
        continue

    if guess == num:
        print(f"You got it! The answer is {num}")
        break
    elif guess > num:
        print("Too high.")
    else:
        print("Too low.")

    lives -= 1
    if lives == 0:
        print(f"You've run out of attempts. The number was {num}.")
